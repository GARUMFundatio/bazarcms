<a class="volver-home-link" href="/home"><%=t(:text_volver_a_la_pagina_de_busquedas)%></a>

<h3 class="titulo-destacado"><%= @oferta.titulo %></h3>

<h4 class="titulo-seccion">
	<%=t(:text_detalle_de_la)%><%= oferta_tipo(@oferta.tipo) %>
</h4>

<table class="tabla" cellspacing="0">
<tr>
	<th colspan="3">
		<%=t(:text_descripcion)%>
	</th>
</tr>

<tr>
	<td colspan=3>
		<br/>
		<span><%= @oferta.texto.gsub(/\n/,'<br/>').html_safe %></span>
		<br/><br/>
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_validez)%> 
	</th>
	<td colspan="2">
		<%=t(:text_del)%> <%= @oferta.fecha.strftime("%d-%m-%Y") %> <%=t(:text_al)%> <%= @oferta.fecha_hasta.strftime("%d-%m-%Y") %>
	</td>
</tr>


<tr>
	<th scope="row">
		<%=t(:text_pagina_web_con_mas_informacion)%>
	</th>
	<td colspan="2">
		-
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_se_ha_enviado_a)%>
	</th>
	<td colspan="1">
		<%= @oferta.total_empresas %> <%=t(:text_empresas)%> 
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_mostrada)%>
	</th>
	<td colspan="1">
		<%= @oferta.vistas %>
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_clicks_en_la_informacion)%>
	</th>
	<td colspan="1">
		<%= @oferta.clicks %>
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_se_ha_visitado_un)%>
	</th>
	<td colspan="1">
		<% if @oferta.vistas > 0 %>
			<%= @oferta.clicks * 100 / @oferta.vistas -%> <%=t(:text_porcentaje_de_las_veces_que_se_ha_mostrado)%>
		<% else %>
			<%=t(:text_no_se_ha_mostrado_nunca)%>
		<% end %>
	</td>
</tr>

</table>

<h4 class="titulo-seccion"><%=t(:text_empresas_destinatarias_de_esta)%><%= oferta_tipo(@oferta.tipo) %></h4>

<br/>
<br/>

<div>

<b><%=t(:text_empresas_que_cumplan)%></b>
<br/>
<br/>

<%= sql2texto(@oferta.filtro).html_safe %>
</div>

<br/>
<br/>

<h4 class="titulo-seccion"><%=t(:text_informacion_de_la_empresa_que_publica_esta)%><%= oferta_tipo(@oferta.tipo) %></h4>

<br/>

<div id="infoempresa">
	
</div>

<script type="text/javascript" charset="utf-8">

	$('#infoempresa').load("/bazarcms/empresas/<%= @oferta.empresa_id -%>?bazar_id=<%= @oferta.bazar_id -%>&display=inside");
	
</script>

