<a class="volver-home-link" href="/home">&laquo; Volver a la página de búsquedas</a>

<h3 class="titulo-destacado"><%= @oferta.titulo %></h3>

<h4 class="titulo-seccion">
	<%= oferta_tipo(@oferta.tipo) %>
</h4>

<table class="tabla" cellspacing="0">
<tr>
	<th colspan="3">
		Descripción:
	</th>
</tr>

<tr>
	<td colspan=3>	
		<%= @oferta.texto.gsub(/\n/,'<br/>').html_safe %>
	</td>
</tr>

<tr>
	<th scope="row">
		Validez: 
	</th>
	<td colspan="2">
		Del <%= @oferta.fecha.strftime("%d-%m-%Y") %> al <%= @oferta.fecha_hasta.strftime("%d-%m-%Y") %>
	</td>
</tr>


<tr>
	<th scope="row">
		Página Web con más información:
	</th>
	<td colspan="2">
	</td>
</tr>

<tr>
	<th scope="row">
		Se ha enviado a:
	</th>
	<td colspan="1">
		<%= @oferta.total_empresas %> Empresas 
	</td>
</tr>

<tr>
	<th scope="row">
		Mostrada:
	</th>
	<td colspan="1">
		<%= @oferta.vistas %>
	</td>
</tr>

<tr>
	<th scope="row">
		Clicks en la información:
	</th>
	<td colspan="1">
		<%= @oferta.clicks %>
	</td>
</tr>

<tr>
	<th scope="row">
		Han visitado esta página:
	</th>
	<td colspan="1">
		<% if @oferta.vistas > 0 %>
			<%= @oferta.clicks * 100 / @oferta.vistas -%> % de los usuarios que la han visto.
		<% else %>
			No se ha mostrado nunca.
		<% end %>
	</td>
</tr>

</table>

<h4 class="titulo-seccion">Empresas destinatarias de esta <%= oferta_tipo(@oferta.tipo) %></h4>

<br/>
<br/>

<div>

<b>Empresas que cumplan: </b>
<br/>
<br/>

<%= sql2texto(@oferta.filtro).html_safe %>
</div>


