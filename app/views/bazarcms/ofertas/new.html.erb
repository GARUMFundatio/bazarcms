		return false;
	}

	s = $("#busca").val();
	if (s.length == 0) {
		s = '*';
	}
	s = s.replace(/ /g, "+");

	emple = $("#empleados2").val();
	ventas = $("#ventas2").val();
	compras = $("#compras2").val();
	resultados = $("#resultados2").val();
	pofertan = $("#pofertan").val();
	pdemandan = $("#pdemandan").val();
	ppaises = $("#ppaises").val();

	$('#bazarcms_oferta_filtro').val('q='+s+'&qe='+emple+'&qv='+ventas+'&qc='+compras+'&qr='+resultados+'&pofertan='+pofertan+'&pdemandan='+pdemandan+'&ppaises='+ppaises);

	$('#ofer2').toggle('slow');
	$('#ofer3').toggle('slow');
	
	$('#new_bazarcms_oferta').submit();
	
}

