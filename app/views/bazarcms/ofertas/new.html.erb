function Estimar() {
	
		s = $("#busca").val();
		if (s.length == 0) {
			s = '*';
		}
		s = s.replace(/ /g, "+");

		emple = $("#empleados2").val();
		ventas = $("#ventas2").val();
		compras = $("#compras2").val();
		resultados = $("#resultados2").val();
		pofertan = $("#pofertan").val();
		pdemandan = $("#pdemandan").val();
		ppaises = $("#ppaises").val();

		$("#estado").show();
		$("#progressbar").show();
		$("#estadotexto").show();

		$("#estadotexto").html('Buscando las empresas a las que se va a enviar la oferta');

		$.ajax({
		  async:true, 
		  url: '/bazarcms/enviabusqueda?q='+s+'&qe='+emple+'&qv='+ventas+'&qc='+compras+'&qr='+resultados+'&pofertan='+pofertan+'&pdemandan='+pdemandan+'&ppaises='+ppaises+'&display=total', 
		  success: function(data) {
		    $('#estimadas').html(data);
			$('#estimadas').show();
		
			clearInterval(actualiza);

			$('#progressbar').hide();
			$("#progressbar").progressbar({ value: 0});

			$('#estadotexto').hide();
			$("#estadotexto").html('');

			clearInterval(actualiza);
		  }
		});

		var actualiza = setInterval(function(){
			
			$.get('/bazarcms/estadobusqueda', function(data) {
				
				$("#progressbar").progressbar({ value: (data[0].empresasconsulta.total_respuestas * 100) / data[0].empresasconsulta.total_consultas});
				$("#estadotexto").html(data[0].empresasconsulta.total_resultados +' Empresas de '+ data[0].empresasconsulta.total_respuestas +' Bazares');
				window.alert(data[0].empresasconsulta.total_resultados);
				if (data[0].empresasconsulta.total_resultados > 0) {
					$("#navegar-publicar1").show();
				}
				else {
					$("#navegar-publicar1").hide();					
				}
				
			});
	     },1000);
		
		
		return false;
};


$(function() {
	$( "#progressbar" ).progressbar({ value: 0});
});


function desactivar() {
	$("#navegar-publicar1").hide();
	$("#estado").hide();
	$("#estimadas").hide();
}


function publicar() {

	titulo = $("#bazarcms_oferta_titulo").val();
	
	if (titulo.length <= 0) {
		$("#bazarcms_oferta_titulo").focus();
		return false;
	}


	
	if ($("#bazarcms_oferta_texto").val().length <= 0) {
		$("#bazarcms_oferta_texto").focus();
		return false;
	}

	
	if ($("#bazarcms_oferta_texto_correo").val().length <= 0) {
		$("#bazarcms_oferta_texto_correo").focus();
		return false;
	}

	
	if ($("#bazarcms_oferta_fecha").val().length <= 0) {
		$("#bazarcms_oferta_fecha").focus();
		return false;
	}
	
	
	if ($("#bazarcms_oferta_fecha_hasta").val().length <= 0) {
