<div>
	<ul class="tabs">
	    <li><a href="#tab1">Información</a></li>
	    <li><a href="#tab2">Datos</a></li>
	    <li><a href="#tab3">Ubicaciones</a></li>
	    <li><a href="#tab4">Perfiles</a></li>
	    <li><a href="#tab5">Actividad</a></li>
	</ul>
</div>

<div class="tab_container">

<div id="tab1" class="tab_content">
	
<%= form_for(@empresa) do |f| %>

  <% if @empresa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> No se ha podido salvar los datos de la empresa:</h2>

      <ul>
      <% @empresa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
	<tr>
		<td>
    		<b><%= f.label :Nombre %></b>
		</td>
		<td colspan="2">
		    <%= f.text_field :nombre, :size => "40" %>			
		</td>
 	</tr>
	<tr>
		<td colspan='4'>
    		<b><%= f.label :Descripción %></b>
		</td>
	</tr>
	<tr>
		<td colspan='4'>
    		<%= f.text_area(:desc, :size => "60x15") %>
		</td>
	</tr>
	<tr>
		<td>
    		<b><%= f.label :Fundada %><br /></b>
		</td>
		<td>
    		<%= f.text_field :fundada %>
		</td>
  		<td>
    		<b><%= f.label :Moneda %><br /></b>
    	</td>
		<td>
			<%= f.select :moneda, options_for_select(Bazarcms::Empresa.Monedas, @empresa.moneda) %>
		</td>
	</tr>
	<tr>
		<td colspan="3">
    		<b>Ofrecemos: </b> (Tags separados por comas)
		</td>
	</tr>
	<tr>
		<td colspan="4">
		    <%= f.text_area :actividad_list, :size => "60x4" %>			
		</td>
 	</tr>
	<tr>
		<td colspan="3">
    		<b>Nos Interesa: </b> (tags separados por comas)
		</td>
	</tr>
	<tr>
		<td colspan="4">
		    <%= f.text_area :interes_list, :size => "60x4" %>			
		</td>
 	</tr>
	
</table>

<div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>

</div>

<div id="tab2" class="tab_content">
<br/>
<b>Información Económica</b>
<br />

<table class="tabla">	
	<tr>
		<th>Año</th>
		<th>Empleados</th>
		<th>Compras</th>
		<th>Ventas</th>
		<th>Resultados</th>
		<th>Acción</th>
	</tr>

	<% for emp in @empresasdatos do %>

	<tr>
		<td class="datostd"> <%= emp.periodo %> </td>
		<td class="datostd"> <%= Bazarcms::Empresasdato.REtexto(emp.empleados) %> </td>
		
		<td class="datostd"> <%= Bazarcms::Empresasdato.RDtexto(emp.compras) %> </td>
		<td class="datostd"> <%= Bazarcms::Empresasdato.RDtexto(emp.ventas) %> </td>
		<td class="datostd"> <%= Bazarcms::Empresasdato.RDtexto(emp.resultados) %> </td>
		<td><%= link_to(image_tag("pencil.png", :border => "0"), edit_bazarcms_empresasdato_path(emp))  %></td>
	</tr>
	
	<% end %>
</table>
</div>

<div id="tab3" class="tab_content">

<table class="tabla">
<tr>
  <td colspan="3">
    <b>Ubicaciones: </b>
  </td>
</tr>
	
<% for ubi in @empresa.ubicaciones %>
<tr>
<td>
	<b><%= ubi.desc %></b>
</td>
<td>
	<%= ubi.ciudad_id %>
</td>
</tr>
<% end %>
</table>

<table class="tabla">
<tr>
	<td colspan="4">
		<div id="addubi">
		</div>
	Añadir una nueva Ubicación <a href="#" onclick="$('#addubi').load('<%= new_bazarcms_ubicacion_path -%>?empresa='+<%= params[:id] -%>);"><%= image_tag("add.png")%></a>
	</td>
</tr>
</table>
</div>

<div id="tab4" class="tab_content">
  <br/>Coming Soon!!!
</div>
	
<div id="tab5" class="tab_content">
  <br/>Coming Soon!!!
</div>


</div>

<script type="text/javascript">
$(document).ready(function() {

	$(".tab_content").hide();
	$("ul.tabs li:first").addClass("active").show(); 
	$(".tab_content:first").show(); 

	$("ul.tabs li").click(function() {

		$("ul.tabs li").removeClass("active");
		$(this).addClass("active"); 
		$(".tab_content").hide();

		var activeTab = $(this).find("a").attr("href"); 
		$(activeTab).fadeIn(); 
		return false;
	});

});
</script>


