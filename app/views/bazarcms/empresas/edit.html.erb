<div>

<%= form_for(@empresa) do |f| %>

  <% if @empresa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> No se ha podido salvar los datos de la empresa:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
	<tr>
		<td>
    		<%= f.label :Nombre %>
		</td>
		<td colspan="2">
		    <%= f.text_field :nombre, :size => 40 %>			
		</td>
 	</tr>
	<tr>
		<td colspan='4'>
    		<%= f.label :Descripción %>
		</td>
	</tr>
	<tr>
		<td colspan='4'>
    		<%= f.text_area(:desc, :size => "60x15") %>
		</td>
	</tr>
	<tr>
		<td>
    		<%= f.label :Fundada %><br />
		</td>
		<td>
    		<%= f.text_field :fundada %>
		</td>
  		<td>
    		<%= f.label :Moneda %><br />
    	</td>
		<td>
			<%= f.select :moneda, options_for_select(Bazarcms::Empresa.Monedas, @empresa.moneda) %>
		</td>
	</tr>
	<tr>
		<td colspan="4">
			Información Financiera
		</td>
	</tr>	
	
</table>

<%= f.fields_for @empresasdatos do |ed|%>
  <div class="field">
  <%= ed.label :Periodo %>
  <%= ed.text_field :periodo %>
  </div>
<% end %>

 <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>

</div>
