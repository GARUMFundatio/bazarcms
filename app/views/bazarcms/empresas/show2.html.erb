
<table class="tabla">
<tr>
	<th>
		Empresa:
	</th>
	<td>	
		<%= @empresa.nombre %>
	</td>
</tr>
</table> 

<br/>
<h4 class="titulo-seccion">Información</h4>
<table class="tabla">
<tr>
	<td>
		<b>Descripción:</b>
	</td>
	<td colspan=4>	
		<%= @empresa.desc %>
	</td>
</tr>

<tr>
	<td>
		<b>Fundada:</b>
	</td>
	<td>	
		<%= @empresa.fundada %>
	</td>
	<td>
		<b>Moneda:</b>
	</td>
	<td>	
		<%= Bazarcms::Empresa.Monedastexto(@empresa.moneda) %>
	</td>
</tr>

<tr>
	<td>
		<b>Página Web:</b>
	</td>
	<td colspan="3">
		<% if !@empresa.url.nil? %>	
			<%= link_to(@empresa.url,  @empresa.url) %>
		<% else %>
			-
		<% end %>	
	</td>
</tr>

<tr>
	<td>
		<b>Ofrecen:</b>
	</td>
	<td colspan="4">	
		<%= @empresa.actividad_list %>
	</td>
</tr>

<tr>
	<td>
		<b>Demandan:</b>
	</td>
	<td colspan="4">	
		<%= @empresa.interes_list %>
	</td>
</tr>


</table> 


<br/>
<h4 class="titulo-seccion">Ubicaciones</h4>

<table class="tabla" cellspacing="0">

<% for ubi in @empresa.ubicaciones %>
<tr>
<th scope="row">
	<%= ubi.desc %>
</th>

<td>
	<%= ubi.ciudad.descripcion -%>, <%= ubi.ciudad.pais.descripcion -%>
</td>

</tr>
<% end %>
</table>


