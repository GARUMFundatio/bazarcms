
<h4 class="titulo-seccion">Empresas</h4>
<h3 class="titulo-destacado"><%= @empresa.nombre %></h3>


<table class="tabla" cellspacing="0">
<tr>
	<td>
		<b>Descripción:</b>
	</td>
	<td colspan=4>	
		<%= @empresa.desc %>
	</td>
</tr>

<tr>
	<th scope="row">
		Fundada:
	</th>
	<td>	
		<%= @empresa.fundada %>
	</td>
</tr>

<tr>
    <th scope="row">
		Moneda:
	</th>
	<td>
		<%= Bazarcms::Empresa.Monedastexto(@empresa.moneda) %>
	</td>
</tr>

<tr>
	<th scope="row">
		Página Web:
	</th>
	<td colspan="3">	
		<%= link_to(@empresa.url,  @empresa.url) %>
	</td>
</tr>

<tr>
	<th scope="row">
		Ofrecen:
	</th>
	<td colspan="4">	
		<%= @empresa.actividad_list %>
	</td>
</tr>

<tr>
	<th scope="row">
		Demandan:
	</th>
	<td colspan="4">	
		<%= @empresa.interes_list %>
	</td>
</tr>


</table>