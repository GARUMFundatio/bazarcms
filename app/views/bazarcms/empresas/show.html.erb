
<h3 class="titulo-destacado"><%= @empresa.nombre %></h3>

<table boder="0">

<tr>
	<td>	
		<%= link_to image_tag("email.png"), "/mensajes/new?aquien=2&tipo=M"+"?aquien=#{@empresa.id}&tipo=M&bazar_id=#{BZ_param("BazarId")}&bazar_destino=#{params[:bazar_id]}", :title => 'Enviar Mensaje de Correo' %>
	</td>
	<td>
		
		<% if !params[:user_id].nil? %>
			<%= helper_favo2(BZ_param("BazarId"), @empresa.id, @empresa.nombre, "fichaempresa", params[:user_id]) %>
		<% else %>
			<%= helper_favo2(BZ_param("BazarId"), @empresa.id, @empresa.nombre, "fichaempresa", current_user.id) %>	
		<% end %>
	</td>
</tr>
</table>

</br>

<h4 class="titulo-seccion"><%=t(:text_empresa)%></h4>

<table class="tabla" cellspacing="0">
<tr>
	<th scope="row">
		<%=t(:text_descripcion)%>
	</th>
	<td colspan=4>	
		<%= @empresa.desc %>
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_rating)%>
	</th>

	<td colspan="2">
		<%= helper_rating_show2(BZ_param("BazarId"), @empresa.id).html_safe %>
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_fundada)%>
	</th>
	<td>	
		<%= @empresa.fundada %>
	</td>
</tr>

<tr>
    <th scope="row">
		<%=t(:text_moneda)%>
	</th>
	<td>
		<%= Bazarcms::Empresa.Monedastexto(@empresa.moneda) %>
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_pagina_web)%>
	</th>
	<td colspan="3">
		<% if !@empresa.url.nil? %> 	
			<%= link_to(@empresa.url,  @empresa.url) %>
		<% else %>
			-
		<% end %>
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_email)%>
	</th>
	<td colspan="3">	
		<%= @usuario.email %>
	</td>
</tr>


<tr>
	<th scope="row">
		<%=t(:text_ofrecen)%>
	</th>
	<td colspan="4">	
		<%= @empresa.actividad_list %>
	</td>
</tr>

<tr>
	<th scope="row">
		<%=t(:text_demandan)%>
	</th>
	<td colspan="4">	
		<%= @empresa.interes_list %>
	</td>
</tr>


</table>


